# MongoDB Database Configuration
# MongoDB connection URL - replace with your actual MongoDB connection string
MONGODB_URL=mongodb+srv://username:password@cluster0.mongodb.net/?retryWrites=true&w=majority&appName=YourAppName

# Database name
DATABASE_NAME=RavenCodeLearning

# JWT Authentication Configuration
# Public key from your user management service (replace with your actual public key)
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
YOUR_ACTUAL_PUBLIC_KEY_HERE
-----END PUBLIC KEY-----

# JWT algorithm (must match your user management service)
JWT_ALGORITHM=RS256

# User Management Service Configuration
# URL of your user management service (for retrieving JWT public key)
USER_MANAGEMENT_SERVICE_URL=http://localhost:8001

# Redis Configuration
# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis cache TTL in seconds (300 = 5 minutes)
REDIS_CACHE_TTL=300

# Application Configuration
# Port for the FastAPI application (this is the evaluation service)
API_PORT=8002
